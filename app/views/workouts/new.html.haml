.row
  .five.columns
    %h3 Add Workout:
    = render(:partial => '/shared/errors', :locals => {:object => @workout})
    = form_for @workout do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :calories
      = f.text_field :calories
      = f.label :date
      = f.text_field :date
      = f.submit "Add Workout", :class => 'button radius info'
  .seven.columns